<p id="notice"><%= notice %></p>

<h1>Existing Wisdom</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Advice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advices.each do |advice| %>
      <tr>
        <td><%= advice.title %></td>
        <td><%= advice.body %></td>
        <td><%= link_to 'Show', advice %></td>
        <td><%= link_to 'Edit', edit_advice_path(advice) %></td>
        <td><%= link_to 'Destroy', advice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

